{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": false,
        "declaration": true,
        "stripInternal": true,
        "lib": [
            "es2016", "dom"
        ],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "rootDir": "src",
        "outDir": "lib",
        "baseUrl": "."
    },
    "include": [
        "src"
    ]
}
